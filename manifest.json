{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "0.0.1",
    "default_locale": "en",

    "developer": {
      "name": "Ng Guoyou",
      "url": "https://github.com/gyng/rtl-reader-view"
    },

    "homepage_url": "https://github.com/gyng/rtl-reader-view",

    "background": {
      "scripts": [
        "src/rtl.js"
      ]
    },

    "permissions": [
      "<all_urls>",
      "tabs",
      "activeTab"
    ],

    "icons": {
      "48": "icons/ic_archive_black_48px.png",
      "96": "icons/ic_archive_black_96px.png",
      "128": "icons/ic_archive_black_128px.png"
    }
  }
